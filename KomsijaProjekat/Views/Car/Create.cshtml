@model KomsijaProjekat.Models.Car

@{
    ViewBag.Title = "Create Car";
}

<h2>Create Car</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="Model">Model</label>
        @Html.TextBoxFor(model => model.Model, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Model)
    </div>

    <div class="form-group">
        <label for="Year">Year</label>
        @Html.TextBoxFor(model => model.Year, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Year)
    </div>

    <div class="form-group">
        <label for="BrandId">Brand</label>
        @Html.DropDownListFor(model => model.BrandId,
            (SelectList)ViewBag.Brands,  
            "Select Brand", 
            new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.BrandId)
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
}
