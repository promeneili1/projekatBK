    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Funkcija za promenu teme
        function changeTheme(theme) {
            const body = document.getElementById('body');
            const navbar = document.querySelector('.navbar');
            const footer = document.querySelector('footer');

            if (theme === 'theme1') {
                body.classList.remove('bg-dark', 'text-light');
                body.classList.add('bg-light', 'text-dark');
                navbar.classList.remove('bg-dark');
                navbar.classList.add('bg-primary');
                footer.classList.remove('bg-dark');
                footer.classList.add('bg-primary');
            } else if (theme === 'theme2') {
                body.classList.remove('bg-light', 'text-dark');
                body.classList.add('bg-dark', 'text-light');
                navbar.classList.remove('bg-primary');
                navbar.classList.add('bg-dark');
                footer.classList.remove('bg-primary');
                footer.classList.add('bg-dark');
            }
        }

        
        function filterCards() {
            const searchQuery = document.getElementById('searchInput').value.toLowerCase();
            const cards = document.querySelectorAll('.card'); 

            cards.forEach(card => {
                const cardTitle = card.querySelector('.card-title').textContent.toLowerCase(); 
                if (cardTitle.includes(searchQuery)) {
                    card.style.display = 'block'; 
                } else {
                    card.style.display = 'none'; 
                }
            });
        }

        
        document.getElementById('theme1Btn').addEventListener('click', function () {
            changeTheme('theme1');
        });

        document.getElementById('theme2Btn').addEventListener('click', function () {
            changeTheme('theme2');
        });
    </script>

